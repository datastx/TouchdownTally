# TouchdownTally Environment Variables
# Copy this file to .env and update the values as needed

# Database Configuration
DATABASE_URL=postgres://touchdown_user:touchdown_dev@postgres:5432/touchdown_tally?sslmode=disable
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=touchdown_user
POSTGRES_PASSWORD=touchdown_dev
POSTGRES_DB=touchdown_tally

# Redis Configuration
REDIS_URL=redis://:touchdown_redis@redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=touchdown_redis

# Application Configuration
APP_ENV=development
APP_PORT=8080
APP_HOST=0.0.0.0
JWT_SECRET=your-jwt-secret-key-change-this-in-production
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# NFL Data API Configuration
MYSPORTSFEEDS_API_KEY=your-mysportsfeeds-api-key
NFL_SEASON_YEAR=2024

# Frontend Configuration
VUE_APP_API_BASE_URL=http://localhost:8080
VUE_APP_WS_URL=ws://localhost:8080/ws

# Development Settings
DEBUG=true
LOG_LEVEL=debug
ENABLE_CORS=true

# Background Jobs
ENABLE_BACKGROUND_JOBS=true
SCORE_UPDATE_INTERVAL=300  # 5 minutes in seconds

# Chat Settings
CHAT_MESSAGE_LIMIT=500
CHAT_RATE_LIMIT=10  # messages per minute per user
